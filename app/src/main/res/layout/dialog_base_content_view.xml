<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_corner_10_color_white">



    <!-- 留作动态添加 content view-->
    <FrameLayout
        android:id="@+id/fl_dialog_base_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        tools:layout_height="100dp"
        android:layout_height="wrap_content">
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/fl_dialog_base_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:minWidth="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginEnd="18dp"
            android:visibility="gone"
            android:background="@drawable/shape_corner_5_stroke_color_blue_33a3f4"
            android:text="@string/call_dialog_cancel"
            tools:visibility="visible"
            android:textColor="@color/gray_light_777"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_dialog_submit"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_height="30dp"
            tools:visibility="visible"
            android:background="@drawable/shape_corner_5_color_blue_33a3f4"
            android:text="@string/call_dialog_submit"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>
    </LinearLayout>
</RelativeLayout>
